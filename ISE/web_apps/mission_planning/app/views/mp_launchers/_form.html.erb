<% semantic_form_for @mp_launcher do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :name, :label => 'Launcher Type', :hint => "Type of Launcher (MUST BE the same as the Interceptor Type)" %> 
    <%= f.input :desc, :as => :text, :label => 'Description' %>
    <%= f.input :mp_interceptor, :as => :select, :include_blank => false, :label => 'Interceptor Type', :hint => "MUST BE the same as the Launcher Type" %>
    <%= f.input :mp_interceptor_qty, :hint => "Number of Interceptors", :label => 'Interceptor Quantity' %>
    <%= f.input :tbm_doctrine, :as => :select, :include_blank => false, :label => 'TBM Doctrine' %>
    <%= f.input :abt_doctrine, :as => :select, :include_blank => false, :label => 'ABT Doctrine' %>
  <% end %>
	
  <% f.buttons do %>
    <%= f.commit_button :label => 'Update Launcher' %>
  <% end %>
<% end %>

  
