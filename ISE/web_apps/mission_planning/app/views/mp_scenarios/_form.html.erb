<% semantic_form_for @mp_scenario, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :name,
            :hint => "Name this scenario using only lowercase letters, numbers and underscores. No spaces or special characters are allowed."  %>
    <%= f.input :desc,      :as => :text, :label => 'Description' %>
    <%= f.input :random_threat_count, 
            :hint => 'How many extra threats should be randomly generated?' %>
    <%= f.input :idp_name,        :label => 'IDP Scenario Name',
            :as => :select,      :collection => idp_directories,
            :hint => "The directory name where the UIMDT/IDP scenario was saved." %>
    <%= f.input :sg_name,         :label => 'SG Scenario Name',
            :as => :select,      :collection => sg_directories,
            :hint => "The directory name where the UIMDT/SG scenario was saved." %>
    <%= f.input :auto_engage_tbm, :label => 'Auto-engaged all TBM threats',
            :title => "Check this box to simulate the auto-engagement of all missile threats"  %>    
    <%= f.input :auto_engage_abt, :label => 'Auto-engaged all ABT threats',
            :title => "Check this box to simulate the auto-engagement of all air-breathing threats"  %>    
    <%= f.input :man_in_the_loop, :as => :hidden, :default => true,  :label => 'Man-in-the-loop Simulation',
            :title => "xCheck this box to support near-real-time training through simulation using this scenario"  %>    
    <%= f.input :selected,  :as => :boolean, :default => true, :label => 'Select this scenario?',
            :title => "Check this box to select this scenario for simulation"  %>    
  <% end %>  
  <% f.buttons do %>
    <%= f.commit_button :label => 'Update Scenario', :path => @mp_scenario,
        :button_html => { :onClick => "return confirm('\
This operation may take up to 30 seconds to complete.\
        ')" } %>
  <% end %>
<% end %>
        


