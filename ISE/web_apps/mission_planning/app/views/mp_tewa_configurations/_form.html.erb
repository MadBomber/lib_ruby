<%= error_messages_for 'mp_tewa_configuration' %>

<% semantic_form_for @mp_tewa_configuration do |f| %>
  <!-- <%= f.error_messages %> -->
  <% f.inputs do %>
    <%= f.input :name, :hint => "Name the TEWA configuration using only lower case alpha-numberic with underscores.  (Upper case letters, spaces and other special characters are not allowed.)  Max. length is #{TEWA_NAME_LENGTH} characters." %>
    <%= f.input :desc, :as => :text, :label => 'Description'%>
    <%= f.input :doctrine, :as => :boolean, :selected => true, :unselected => false, :label => 'Use doctrine?', :title=>'Unused variable; ignored by simulation.' %>
    <%= f.input :selected, :as => :boolean, :selected => true, :unselected => false, :label => 'Select this configuration?', :title=>'If selected, the simulation will use this TEWA configuration.'  %>
	
	
	<% @mp_tewa_categories.each_pair do |category_name, factors| %>
		<p><%= render("mp_tewa_values/#{@form_type}_form",
					  :f => f,
					  :mp_tewa_configuration => @mp_tewa_configuration,
					  :category_name => category_name,
					  :factors => factors) %></p>
	<% end %>
  <% end %>  
  <% f.buttons do %>
    <%= f.commit_button :label => 'Update TEWA Configuration', :path => @mp_tewa_configuration %>
  <% end %>
<% end %>
