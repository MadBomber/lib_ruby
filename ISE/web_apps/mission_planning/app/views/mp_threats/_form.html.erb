<% semantic_form_for @mp_threat do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :name, :hint => "Name the threat" %>
    <%= f.input :desc, :as => :text, :label => 'Description' %>
    <%= f.input :track_category, :as => :radio, :collection => [['Air', 'air'], ['Space', 'space']] %>
    <%= f.input :effects_radius, :hint => "Radius of threat effects (in kilometers)"%>
  <% end %>  
  <% f.buttons do %>
    <%= f.commit_button :label => 'Update Threat', :path => @mp_threat %>
  <% end %>
<% end %>
