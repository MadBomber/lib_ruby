
<% if model_entry.respond_to?('name') %>
  <% title "Edit #{model_class.class_name.titleize}: " + model_entry.name.titleize %>
<% else %>
  <% title "Edit #{model_class.class_name.titleize}" %>
<% end %>

<%= render :partial => 'form' %>

<%= render :partial => 'description' %>

<% content_for :page_links do%>
  <%= link_to "Show", model_entry %> |
  <%= link_to "View All", root_class_path_sym(model_entry) %>
<% end %>
